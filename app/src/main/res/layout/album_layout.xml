<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/albumLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:padding="6dp"
        android:background="@drawable/xml_album_bg">


        <FrameLayout android:id="@+id/id_album_img_layout"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:transitionName="imageMain"
                android:src="@drawable/img_default_meizi"/>

            <View android:id="@+id/id_album_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_pressed_bg"/>

        </FrameLayout>

        <TextView
            android:id="@+id/star_photo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:maxLines="2"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:text="@string/app_name"
            android:ellipsize="end"
            android:textColor="#CC000000"/>

    </LinearLayout>

</RelativeLayout>